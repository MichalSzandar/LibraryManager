<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Dialekt bazy danych H2 -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <!-- Baza danych w pamięci -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <!-- Automatyczne tworzenie i usuwanie tabel w każdej sesji -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <!-- Włączone pokazywanie zapytań SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Automatyczne ładowanie wszystkich klas encji -->
        <mapping class="michal.projects.data.User"/>
        <mapping class="michal.projects.data.Book"/>
        <mapping class="michal.projects.data.Loan"/>
        <mapping class="michal.projects.data.Role"/>
        <mapping class="michal.projects.data.Author"/> <!-- Dodajemy Author -->
        <mapping class="michal.projects.data.Category"/> <!-- Dodajemy Category, jeśli jeszcze nie dodane -->
    </session-factory>
</hibernate-configuration>

</hibernate-configuration>
